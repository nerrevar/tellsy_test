*
  margin 0
  padding 0
  box-sizing border-box
  text-align center
  font-family Sans Serif
  font-size 13px

#app
  margin auto
  display flex
  flex-flow column nowrap

  @media screen and (min-width: 1100px)
    max-width 1100px

.button
  padding 0.5em 1em
  background-color #459
  color white
  border-radius 3px
  line-height 1.2em
  max-height 2.2em
